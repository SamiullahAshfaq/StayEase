/* Main Layout with Custom Theme */
.navbar {
  position: sticky;
  top: 0;
  z-index: 50;
  background-color: white;
  border-bottom: 1px solid;
  border-color: #e5e7eb;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.navbar-container {
  @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex items-center justify-between h-20;
}

/* Logo with theme colors */
.logo-link {
  @apply flex items-center gap-2 no-underline;
  transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.logo-link:hover {
  transform: scale(1.05);
}

.logo-icon {
  @apply w-8 h-8;
  color: var(--primary);
}

.logo-text {
  @apply text-2xl font-extrabold;
  color: var(--primary);
  letter-spacing: -0.5px;
}

/* Search Bar with theme */
.search-bar {
  @apply hidden md:flex items-center border rounded-full px-3 py-2 shadow-sm;
  border-color: #d1d5db;
  transition: box-shadow 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.search-bar:hover {
  box-shadow: 0 4px 12px rgba(1, 135, 144, 0.15);
}

.search-button {
  @apply px-4 py-2 font-semibold bg-transparent border-none cursor-pointer text-sm;
  color: var(--text-primary);
  transition: color 0.2s ease;
}

.search-button:hover {
  color: var(--primary);
}

.search-divider {
  @apply w-px h-6 bg-gray-300;
}

.search-icon-wrapper {
  @apply rounded-full p-2 ml-2 flex items-center justify-center;
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  color: white;
  transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.search-button:hover .search-icon-wrapper {
  transform: scale(1.1);
}

.search-icon {
  @apply w-3 h-3;
}

/* Navigation with smooth animations */
.nav-actions {
  @apply flex items-center gap-2;
}

.host-link {
  @apply hidden md:block px-4 py-2 font-semibold no-underline rounded-full;
  color: var(--text-primary);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.host-link:hover {
  background: var(--background);
  color: var(--primary);
}

.globe-button {
  @apply bg-transparent border-none cursor-pointer p-3 rounded-full;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.globe-button:hover {
  background: var(--background);
}

.globe-icon {
  @apply w-5 h-5;
  color: var(--text-primary);
}

/* User Menu with theme */
.user-menu-wrapper {
  @apply relative;
}

.user-menu-button {
  @apply flex items-center gap-3 px-2 py-1.5 border rounded-full bg-white cursor-pointer;
  border-color: #d1d5db;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.user-menu-button:hover {
  box-shadow: 0 4px 12px rgba(1, 135, 144, 0.15);
  border-color: var(--primary-light);
}

.menu-icon {
  @apply w-4 h-4;
  color: var(--text-secondary);
}

.user-icon {
  @apply w-8 h-8;
  color: var(--text-secondary);
}

.user-avatar {
  @apply w-8 h-8 rounded-full flex items-center justify-center font-bold text-sm;
  background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-light) 100%);
  color: white;
}

/* Dropdown with smooth entrance */
.dropdown-menu {
  @apply absolute top-full right-0 mt-2 bg-white rounded-xl shadow-2xl min-w-[280px] max-w-[320px] overflow-hidden;
  opacity: 0;
  visibility: hidden;
  transform: translateY(-10px);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.6, 1);
  padding: 0.5rem 0;
}

.dropdown-menu.show {
  opacity: 1;
  visibility: visible;
  transform: translateY(0);
  animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* User Info Header */
.dropdown-header {
  @apply px-4 py-3;
}

.user-info {
  @apply flex items-center gap-3;
}

.user-avatar-large {
  @apply w-12 h-12 rounded-full flex items-center justify-center font-bold text-lg flex-shrink-0;
  background: linear-gradient(135deg, var(--primary-dark) 0%, var(--primary-light) 100%);
  color: white;
}

.user-details {
  @apply flex-1 min-w-0;
}

.user-name {
  @apply text-sm font-semibold truncate;
  color: var(--text-primary);
}

.user-email {
  @apply text-xs truncate;
  color: var(--text-secondary);
}

/* Menu Items with theme colors */
.menu-item {
  @apply flex items-center gap-3 px-4 py-3 no-underline bg-transparent border-none cursor-pointer w-full text-left;
  color: var(--text-primary);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.menu-item:hover {
  background: var(--background);
}

.menu-item:hover .menu-icon-svg {
  color: var(--primary);
}

.menu-icon-svg {
  @apply w-5 h-5 flex-shrink-0;
  color: var(--text-secondary);
  transition: color 0.2s ease;
}

.menu-item-title {
  @apply text-sm font-medium leading-tight;
  color: var(--text-primary);
}

.menu-item-subtitle {
  @apply text-xs;
  color: var(--text-secondary);
}

/* Simple Menu Items */
.menu-item-simple {
  @apply flex items-center gap-3 px-4 py-2.5 no-underline bg-transparent border-none cursor-pointer w-full text-left text-sm font-medium;
  color: var(--text-primary);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.menu-item-simple:hover {
  background: var(--background);
  color: var(--primary);
}

.menu-item-simple:hover .menu-icon-svg-small {
  color: var(--primary);
}

.menu-icon-svg-small {
  @apply w-4 h-4;
  color: var(--text-secondary);
  transition: color 0.2s ease;
}

/* Admin Link Highlight */
.admin-link {
  color: var(--primary);
  font-weight: 600;
}

.admin-link .menu-icon-svg-small {
  color: var(--primary);
}

/* Logout Button */
.logout-btn {
  color: #dc2626;
}

.logout-btn:hover {
  background: #fef2f2;
}

.logout-btn .menu-icon-svg-small {
  color: #dc2626;
}

/* Menu Divider */
.menu-divider {
  @apply h-px my-2 mx-4;
  background: #e5e7eb;
}

/* Main Content */
.main-content {
  @apply min-h-screen;
  background: var(--background);
}

/* Footer with theme */
footer {
  @apply border-t py-8 mt-auto;
  background: white;
  border-color: #e5e7eb;
}

.footer-container {
  @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col sm:flex-row items-center justify-between gap-4;
}

.footer-text {
  @apply text-sm;
  color: var(--text-secondary);
}

.footer-links {
  @apply flex items-center gap-2 text-sm flex-wrap;
}

.footer-links a {
  @apply no-underline;
  color: var(--text-secondary);
  transition: color 0.2s ease;
}

.footer-links a:hover {
  color: var(--primary);
}

.footer-divider {
  color: var(--text-secondary);
}

/* Responsive Adjustments */
@media (max-width: 768px) {
  .navbar-container {
    @apply h-16 px-4;
  }

  .logo-text {
    @apply text-xl;
  }

  .dropdown-menu {
    @apply right-0 left-auto;
    min-width: 260px;
  }
}

/* Smooth page transitions */
.main-content > * {
  animation: fadeIn 0.4s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
