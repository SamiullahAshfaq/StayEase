/* Admin Dashboard Theme */

/* Admin Layout */
.admin-layout {
  @apply min-h-screen;
  background: var(--background);
}

.admin-sidebar {
  @apply fixed left-0 top-0 h-full w-64 bg-white border-r;
  border-color: #E5E7EB;
  box-shadow: 4px 0 12px rgba(0, 135, 144, 0.05);
  z-index: 40;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.admin-sidebar-header {
  @apply px-6 py-6 border-b;
  border-color: #E5E7EB;
}

.admin-logo {
  @apply flex items-center gap-3;
}

.admin-logo-icon {
  @apply w-10 h-10;
  color: var(--primary);
}

.admin-logo-text {
  @apply text-2xl font-bold;
  color: var(--primary);
}

.admin-nav {
  @apply px-4 py-6 space-y-2;
}

.admin-nav-item {
  @apply flex items-center gap-3 px-4 py-3 rounded-xl no-underline;
  color: var(--text-secondary);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.admin-nav-item:hover {
  background: rgba(0, 183, 181, 0.08);
  color: var(--primary);
}

.admin-nav-item.active {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  color: white;
  font-weight: 600;
  box-shadow: 0 4px 12px rgba(0, 183, 181, 0.3);
}

.admin-nav-icon {
  @apply w-5 h-5;
}

/* Admin Main Content */
.admin-main {
  @apply ml-64 p-8;
}

.admin-header {
  @apply flex items-center justify-between mb-8;
}

.admin-title {
  @apply text-3xl font-bold;
  color: var(--text-primary);
}

.admin-actions {
  @apply flex items-center gap-4;
}

/* Stats Cards */
.stats-grid {
  @apply grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8;
}

.stat-card {
  @apply bg-white rounded-2xl p-6;
  box-shadow: 0 4px 12px rgba(0, 135, 144, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.stat-card:hover {
  transform: translateY(-4px);
  box-shadow: 0 8px 24px rgba(0, 183, 181, 0.15);
}

.stat-header {
  @apply flex items-center justify-between mb-4;
}

.stat-icon {
  @apply w-12 h-12 rounded-xl flex items-center justify-center;
}

.stat-icon.primary {
  background: rgba(0, 183, 181, 0.1);
  color: var(--primary);
}

.stat-icon.success {
  @apply bg-emerald-100 text-emerald-600;
}

.stat-icon.warning {
  @apply bg-yellow-100 text-yellow-600;
}

.stat-icon.danger {
  @apply bg-red-100 text-red-600;
}

.stat-value {
  @apply text-3xl font-bold;
  color: var(--text-primary);
}

.stat-label {
  @apply text-sm font-medium mt-2;
  color: var(--text-secondary);
}

.stat-change {
  @apply text-sm font-semibold mt-2;
}

.stat-change.positive {
  color: #059669;
}

.stat-change.negative {
  color: #DC2626;
}

/* Data Table */
.data-table-container {
  @apply bg-white rounded-2xl shadow-lg overflow-hidden;
}

.data-table-header {
  @apply px-6 py-4 border-b flex items-center justify-between;
  border-color: #E5E7EB;
}

.table-search {
  @apply max-w-md;
}

/* Charts */
.chart-card {
  @apply bg-white rounded-2xl p-6;
  box-shadow: 0 4px 12px rgba(0, 135, 144, 0.08);
}

.chart-title {
  @apply text-xl font-bold mb-6;
  color: var(--text-primary);
}

/* Responsive */
@media (max-width: 1024px) {
  .admin-sidebar {
    transform: translateX(-100%);
  }

  .admin-sidebar.open {
    transform: translateX(0);
  }

  .admin-main {
    @apply ml-0;
  }
}
