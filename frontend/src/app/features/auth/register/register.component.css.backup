/* Register Page with Custom Theme */

.register-container {
  @apply min-h-screen flex items-center justify-center px-4 py-12;
  background: linear-gradient(135deg,
    var(--primary-dark) 0%,
    var(--primary) 50%,
    var(--primary-light) 100%);
  animation: gradientShift 15s ease infinite;
}

@keyframes gradientShift {
  0%, 100% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
}

.register-card {
  @apply bg-white rounded-3xl shadow-2xl p-8 sm:p-12 w-full max-w-2xl;
  animation: slideIn 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.logo-section {
  @apply text-center mb-8;
}

.logo-icon {
  @apply w-16 h-16 mx-auto mb-4;
  color: var(--primary);
  filter: drop-shadow(0 4px 8px rgba(0, 183, 181, 0.3));
}

.register-title {
  @apply text-3xl font-bold mb-2;
  color: var(--text-primary);
}

.register-subtitle {
  @apply text-base;
  color: var(--text-secondary);
}

.form-container {
  @apply space-y-6;
}

.form-row {
  @apply grid grid-cols-1 sm:grid-cols-2 gap-4;
}

.checkbox-group {
  @apply flex items-start gap-3;
}

.checkbox-input {
  @apply w-5 h-5 rounded border-2 cursor-pointer;
  border-color: var(--primary);
  color: var(--primary);
  transition: all 0.2s ease;
}

.checkbox-input:checked {
  background: var(--primary);
}

.checkbox-label {
  @apply text-sm flex-1;
  color: var(--text-secondary);
}

.submit-button {
  @apply w-full btn-primary text-lg;
}

.login-link {
  @apply text-center mt-6;
}

.loading-overlay {
  @apply absolute inset-0 bg-white/90 flex items-center justify-center rounded-3xl;
}

/* Progress Steps */
.progress-steps {
  @apply flex items-center justify-between mb-8;
}

.progress-step {
  @apply flex items-center gap-2;
}

.step-circle {
  @apply w-10 h-10 rounded-full flex items-center justify-center font-bold;
  background: var(--background);
  color: var(--text-secondary);
  transition: all 0.3s ease;
}

.step-circle.active {
  background: linear-gradient(135deg, var(--primary) 0%, var(--primary-light) 100%);
  color: white;
  box-shadow: 0 4px 12px rgba(0, 183, 181, 0.3);
}

.step-circle.completed {
  background: var(--primary-light);
  color: white;
}

.step-line {
  @apply h-1 w-full max-w-[100px] rounded;
  background: var(--background);
  transition: all 0.3s ease;
}

.step-line.active {
  background: var(--primary);
}
